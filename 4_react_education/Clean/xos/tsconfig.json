{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "es5",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "node",
		//вкл import-export es6
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		// для абсолютного импорта
		"baseUrl": ".",
		"paths":{
			"*":["./src/*"]
		},
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
